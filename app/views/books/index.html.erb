<h1>Books</h1>
 <table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th></th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "edit", edit_book_path(book.id) %></td>
     <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に削除しますか' }, class: "destroy_#{book.id}" %></td>
    </tr>
   <% end %>
  </tbody>
 </table>
 <h2>New book</h2>
 <%= form_with model: @book, local:true do |f| %>
  <P>Title</P>
  <%= f.text_field :title %>
  <P>Body</P>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
 <% end %>